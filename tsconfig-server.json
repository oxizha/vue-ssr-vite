{
  "compilerOptions": {
    "strict": false,
    "lib": ["esnext"],
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./distServer",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "moduleResolution":"NodeNext",
  },

  "include": ["server/**/*"],
  "exclude": [
    "src",
    "dist",
    "distServer",
    "./mock/**/*"
  ]
}
